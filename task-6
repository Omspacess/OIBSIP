//Javascript
const users = {};
let mode = "login";

function showRegister() {
  mode = "register";
  document.getElementById("formTitle").innerText = "üìù Register";
  document.getElementById("actionBtn").innerText = "Register";
  document.getElementById("message").innerText = "";
}

function showLogin() {
  mode = "login";
  document.getElementById("formTitle").innerText = "üîê Login";
  document.getElementById("actionBtn").innerText = "Login";
  document.getElementById("message").innerText = "";
}

function handleSubmit(event) {
  event.preventDefault();

  const user = document.getElementById("username").value.trim();
  const pass = document.getElementById("password").value;
  const msg = document.getElementById("message");

  if (mode === "register") {
    if (users[user]) {
      msg.style.color = "orange";
      msg.innerText = "‚ö†Ô∏è User already exists. Please login.";
    } else {
      users[user] = pass;
      msg.style.color = "lightgreen";
      msg.innerText = "‚úÖ Registered successfully! Please login now.";
      showLogin();
    }
  } else {
    if (!users[user]) {
      msg.style.color = "red";
      msg.innerText = "‚ùå User not registered. Please register first.";
    } else if (users[user] === pass) {
      msg.style.color = "lightgreen";
      msg.innerText = `‚úÖ Welcome, ${user}! You have successfully logged in.`;
    } else {
      msg.style.color = "red";
      msg.innerText = "‚ùå Incorrect password.";
    }
  }
}
